 <table class="table table-hover">
    <thead>
     <tr>
       <th>Item</th>
       <th>Price</th>
       <th>Description</th>
       <th>In Stock</th>
     </tr>
    </thead>
    <tbody>
      <% @items.each do |item|  %>
        <tr>
          <td><%= item.title %></td>
          <td><%="$ #{item.cost}" %></td>
          <td><%= item.description %></td>
          <td><%= item.inventory %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
