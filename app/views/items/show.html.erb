<table class="table table-hover">
  <thead>
  <tr>
    <th>Item</th>
    <th>Price</th>
    <th>Description</th>
    <th>In Stock</th>
  </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @item.title %></td>
      <td><%="$ #{@item.cost}" %></td>
      <td><%= @item.description %></td>
      <td><%= @item.inventory %></td>
      <td><%= button_to "Add Item", method: "post", controller: 'orders', action: "create",
                                      data: { item_id: @item.id, quantity: 1 } %></td>
    </tr>
  </tbody>
</table>