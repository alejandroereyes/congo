<table class="table table-hover for-yield">
  <thead>
  <tr>
    <th>Item</th>
    <th>Price</th>
    <th>Description</th>
    <th>In Stock</th>
  </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @item.title %></td>
      <td><%="$ #{@item.cost}" %></td>
      <td><%= @item.description %></td>
      <td><%= @item.inventory %></td>
      <td><%= button_to "Add Item", new_order_path(item_id: @item.id, quantity: 1), class: 'btn btn-default' %></td>
    </tr>
  </tbody>
</table>