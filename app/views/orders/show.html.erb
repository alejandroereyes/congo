<table class="table table-hover">
  <thead>
  <tr>
    <td>Items</td>
    <td>Description</td>
    <td>Cost</td>
  </tr>
  </thead>
  <tbody>
  <% @order.items.each do |item| %>
    <tr>
      <td><%= item.title %></td>
      <td><%= item.description %></td>
      <td><%= number_to_currency(item.cost) %></td>
    </tr>
  <% end %>
  </tbody>
</table>