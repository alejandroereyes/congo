Hello <%= @user.name %>

<p>Your order #<%= @order.id%>, has processed.</p>
<% @items.each do |item| %>
    <ul>
      <li><%= item.inspect %></li>
      <ul><li><%= number_to_currency(item[:cost]) %></li></ul>
    </ul>
<% end %>
<p>Total Paid: <%= number_to_currency(@total_paid) %></p>
<p>Thank you for your business!</p>